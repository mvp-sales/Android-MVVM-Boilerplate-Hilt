<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    app:startDestination="@id/login_screen">

    <fragment
        android:id="@+id/login_screen"
        android:name="com.aregyan.github.views.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signup_screen">
        </action>
    </fragment>

    <fragment
        android:id="@+id/signup_screen"
        android:name="com.aregyan.github.views.signup.SignupFragment"
        tools:layout="@layout/fragment_signup">
    </fragment>

    <fragment
        android:id="@+id/users_list"
        android:name="com.aregyan.github.views.userList.UserListFragment"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/action_users_list_to_user_details"
            app:destination="@id/user_details">
            <argument
                android:name="user"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/user_details"
        android:name="com.aregyan.github.views.userDetails.UserDetailsFragment"
        tools:layout="@layout/fragment_user_details">
        <argument
            android:name="user"
            app:argType="string" />
    </fragment>

</navigation>

